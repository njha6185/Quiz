<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:isScrollContainer="false"
    android:background="@drawable/start_screen_gradient"
    tools:context="com.example.nitishkumar.quiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sportQuiz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/sports_quiz"
                android:padding="@dimen/_10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/_100sp"
                app:autoSizeMinTextSize="@dimen/_12sp"
                app:autoSizeStepGranularity="@dimen/_1sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix" />

            <ImageView
                android:layout_width="@dimen/_124dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/app_logo_icon"
                android:src="@drawable/logo"/>

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/nameAskText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100dp"
                android:padding="@dimen/_10dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/enter_name_text"
                android:textAlignment="center"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/_100sp"
                app:autoSizeMinTextSize="@dimen/_12sp"
                app:autoSizeStepGranularity="@dimen/_1sp"
                app:autoSizeTextType="uniform"
                tools:ignore="MissingPrefix" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="@dimen/_5dp"
                android:inputType="textPersonName|textCapCharacters"
                android:hint="@string/nameHint"
                android:textAlignment="center" />

            <Button
                android:id="@+id/startButtonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:background="@drawable/ic_forward_black_24dp"
                android:padding="@dimen/_10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>